<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Shopping{% endblock %}</title>
    
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('style.css') }}">
        <link rel="stylesheet" href="{{ asset('css/font-awesome.min.css') }}">
    {% endblock %}
    
    {% block javascripts %}{% endblock %}
</head>
<body>
    <div class="container">
        <div class="navbar">
            <div class="logo">
                <img src="{{ asset('image/shopping.png') }}" alt="" class="shop" />
            </div>
            <nav class="menu">
                <ul>
                    <li><a href="{{ path('app_accueil')}}">ACCUEIL</a></li>
                    <li><a href="{{ path('app_client')}}">CLIENT</a></li>
                    <li><a href="{{ path('app_produit')}}">PRODUIT</a></li>
                    <li><a href="{{ path('app_fournisseur')}}">FOURNISSEUR</a></li>
                </ul>
            </nav>
        </div>

        {# Contenu #}
        {% block body %}{% endblock %}
    </div>
</body>
</html>
